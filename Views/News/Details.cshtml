@model NewsModule.Models.Article

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Title)</h1>
@if (Model == null)
{
    <p>This item was not found</p>
}
else
{
    

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.publishTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.publishTime)
        </dd>
        <dd class = "col-sm-10">

            @Html.Raw(Model.Description)
        </dd>
        
    </dl>
</div>
<div>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }) |
    <a asp-action="Index">Вернуться к списку новостей</a>
</div>
}