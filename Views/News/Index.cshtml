@model IEnumerable<NewsModule.Models.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Новости</h1>

<p>
    <a asp-action="Create">Создать новость</a>
</p>


@if (Model.Count() == 0)
{
    <p>There is no news!</p>
}
else
{
    <ul class="nobullet">
        @foreach (var item in Model)
        {
            <li>
                <a href="@Url.Action("Details", "News", new { id = item.Id })">@item.Title </a>
                   Дата публикации: @item.publishTime

            </li>
        }
    </ul>
}
